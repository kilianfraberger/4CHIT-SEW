@page "/"
@using System.Threading
@using System.Threading.Tasks
@rendermode InteractiveServer

<style>
.factory {
    display: flex;
    justify-content: space-around;
    margin-top: 10px;
    position: relative;
    height: 300px;
}

.station {
    border: 3px solid #888;
    border-radius: 15px;
    padding: 20px;
    width: 140px;
    height: 120px;
    text-align: center;
    background: linear-gradient(135deg,#444,#222);
    color: #fff;
    box-shadow: 0 0 15px rgba(255,255,255,0.2);
    font-weight: bold;
    position: relative;
    font-size: 1.2rem;
    top: 200px;
}

.crane {
    position: absolute;
    top: 100px;
    font-size: 3em;
    transition: left 0.05s linear, top 0.05s linear;
    z-index: 10;
}

.workpiece {
    position: absolute;
    font-size: 2em;
    text-align: center;
    border-radius: 8px;
    transition: left 0.05s linear, top 0.05s linear, background-color 0.3s, width 0.3s, height 0.3s;
    z-index: 5;
}
</style>

<h3 class="text-center text-2xl font-bold mb-4">Fabrik – Parallele Bearbeitung mit Werkstück</h3>

<div class="factory">
    <div class="station" style="@($"top: {storageCurrentY-70}px;")" id="storage">📦 Lager</div>
    <div class="station" style="@($"top: {machineACurrentY-70}px;")" id="machineA">⚙️ Maschine A</div>
    <div class="station" style="@($"top: {machineBCurrentY-70}px;")" id="machineB">🔩 Maschine B</div>
</div>

<div class="crane" style="@($"left: {craneX}px; top: {craneY}px;")">🏗️</div>

<div class="workpiece" style="@($"left: {workpieceX}px; top: {workpieceY}px; background-color:{workpieceColor}; width:{workpieceSize}px; height:{workpieceSize}px;")">
    🔹
</div>

<p style="@($"padding-top: 20px;")" class="mt-4 text-lg">@statusMessage</p>

@code {
    private string statusMessage = "Bereit.";

    private double craneX = 460;
    private double craneY = 100;

    private double workpieceX = 460;
    private double workpieceY = 280;
    private double workpieceSize = 50;
    private string workpieceColor = "gold";

    private enum WorkpieceStatus { Carried, SetDown }
    private WorkpieceStatus wpStatus = WorkpieceStatus.SetDown;

    private double groundY = 280;
    private double craneCarryY = 150;

    private double storageCurrentY = 280;
    private double machineACurrentY = 280;
    private double machineBCurrentY = 280;

    private readonly double storageX = 460;
    private readonly double machineAX = 860;
    private readonly double machineBX = 1250;

    private SemaphoreSlim statusLock = new(1, 1);
    private SemaphoreSlim machineAFinished = new(0, 1);
    private SemaphoreSlim machineBFinished = new(0, 1);
    private SemaphoreSlim machineASem = new(0, 1);
    private SemaphoreSlim machineBSem = new(0, 1);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _ = MachineALoop();
            _ = MachineBLoop();
            _ = RunFactoryLoop();
        }
    }

    private async Task RunFactoryLoop()
    {
        while (true)
        {
            await MoveTo(storageX);
            await PickUpWorkpiece();
            await MoveWithWorkpiece(machineAX);

            machineASem.Release();
            await machineAFinished.WaitAsync();

            await MoveWithWorkpiece(machineBX);

            machineBSem.Release();
            await machineBFinished.WaitAsync();

            await MoveWithWorkpiece(storageX);

            var moveTasksS = new[]
            {
                MoveWorkpieceDownToStationAsync("S"),
                MoveStationUpAsync("S")
            };
            await Task.WhenAll(moveTasksS);

            await UpdateStatus("Werkstück im Lager angekommen.");
            await ChangeWorkpieceColor("gold");
            await Task.Delay(800);
            await RaiseFromStation("S");
        }
    }

    private async Task MachineALoop()
    {
        while (true)
        {
            await machineASem.WaitAsync();
            await LowerAndProcess("A", MachineAWork);
            await RaiseFromStation("A");
            machineAFinished.Release();
        }
    }

    private async Task MachineBLoop()
    {
        while (true)
        {
            await machineBSem.WaitAsync();
            await LowerAndProcess("B", MachineBWork);
            await RaiseFromStation("B");
            machineBFinished.Release();
        }
    }

    private async Task LowerAndProcess(string station, Func<Task> work)
    {
        await Task.WhenAll(
            MoveWorkpieceDownToStationAsync(station),
            MoveStationUpAsync(station)
        );
        await work();
    }

    private async Task MachineAWork()
    {
        await ChangeWorkpieceColor("lightgreen");
        await UpdateStatus("Maschine A arbeitet...");
        await Task.Delay(1500);
    }

    private async Task MachineBWork()
    {
        await ChangeWorkpieceColor("lightblue");
        await UpdateStatus("Maschine B arbeitet...");
        await Task.Delay(1500);
    }

    private async Task MoveWorkpieceDownToStationAsync(string station)
    {
        double step = 4;
        double stationY = station switch
        {
            "A" => machineACurrentY,
            "B" => machineBCurrentY,
            _ => storageCurrentY
        };
        double meetY = (craneCarryY + stationY) / 2;

        wpStatus = WorkpieceStatus.Carried;

        while (workpieceY < meetY)
        {
            workpieceY += step;
            if (workpieceY > meetY) workpieceY = meetY;

            workpieceX = station switch
            {
                "A" => machineAX,
                "B" => machineBX,
                _ => storageX
            };

            await InvokeAsync(StateHasChanged);
            await Task.Delay(10);
        }

        wpStatus = WorkpieceStatus.SetDown;
        workpieceY = meetY;
        workpieceX = station switch
        {
            "A" => machineAX,
            "B" => machineBX,
            _ => storageX
        };

        await InvokeAsync(StateHasChanged);
    }

    private async Task MoveStationUpAsync(string station)
    {
        double step = 4;
        double stationY = station switch
        {
            "A" => machineACurrentY,
            "B" => machineBCurrentY,
            _ => storageCurrentY
        };

        double meetY = (craneCarryY + stationY) / 2;

        while (stationY > meetY)
        {
            stationY -= step;
            if (stationY < meetY) stationY = meetY;

            switch(station)
            {
                case "A": machineACurrentY = stationY; break;
                case "B": machineBCurrentY = stationY; break;
                default: storageCurrentY = stationY; break;
            }

            await InvokeAsync(StateHasChanged);
            await Task.Delay(10);
        }
    }

    private async Task RaiseFromStation(string station)
    {
        double step = 4;
        double stationY = station switch
        {
            "A" => machineACurrentY,
            "B" => machineBCurrentY,
            _ => storageCurrentY
        };

        double endY = groundY;
        wpStatus = WorkpieceStatus.Carried;

        while (stationY < endY)
        {
            stationY += step;
            if (stationY > endY) stationY = endY;

            workpieceY -= step;
            if (workpieceY < craneCarryY) workpieceY = craneCarryY;

            switch(station)
            {
                case "A": machineACurrentY = stationY; break;
                case "B": machineBCurrentY = stationY; break;
                default: storageCurrentY = stationY; break;
            }

            workpieceX = craneX;

            await InvokeAsync(StateHasChanged);
            await Task.Delay(10);
        }

        workpieceY = craneCarryY;
        await InvokeAsync(StateHasChanged);
    }

    private async Task MoveTo(double targetX)
    {
        while (craneX != targetX)
        {
            craneX += craneX < targetX ? 5 : -5;
            if (wpStatus == WorkpieceStatus.Carried) workpieceX = craneX;
            await InvokeAsync(StateHasChanged);
            await Task.Delay(10);
        }
        craneX = targetX;
        if (wpStatus == WorkpieceStatus.Carried) workpieceX = craneX;
        await InvokeAsync(StateHasChanged);
    }

    private async Task MoveWithWorkpiece(double targetX) => await MoveTo(targetX);

    private async Task PickUpWorkpiece()
    {
        wpStatus = WorkpieceStatus.Carried;
        while (workpieceY > craneCarryY)
        {
            workpieceY -= 4;
            workpieceX = craneX;
            await InvokeAsync(StateHasChanged);
            await Task.Delay(10);
        }
    }

    private async Task ChangeWorkpieceColor(string color)
    {
        workpieceColor = color;
        await InvokeAsync(StateHasChanged);
    }

    private async Task UpdateStatus(string text)
    {
        await statusLock.WaitAsync();
        try
        {
            statusMessage = text;
            await InvokeAsync(StateHasChanged);
        }
        finally { statusLock.Release(); }
    }
}
